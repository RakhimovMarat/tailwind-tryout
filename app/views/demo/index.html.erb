<div>
  <h1 class="text-3xl font-bold text-copper-600 mb-6 text-center">Демонстрация Turbo</h1>

  <div class="container mx-auto flex flex-col md:flex-row gap-6">
    <div class="flex-2 p-6 bg-gray-100 rounded-lg shadow-md">
      <p class="mb-4">
        <a href="/link" data-turbo="true" class="text-teal-500 hover:text-teal-700 font-medium">
          Ссылка с Turbo
        </a>
      </p>
      <p>
        <a href="/link" data-turbo="false" class="text-purple-500 hover:text-purple-700 font-medium">
          Ссылка без Turbo
        </a>
      </p>
    </div>

    <div class="flex-2 p-6 bg-gray-100 rounded-lg shadow-md">
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-teal-600 mb-2">Форма с Turbo</h3>
        <%= form_with url: demo_submit_path, method: :post, data: { turbo: true }, class: "space-y-4" do %>
          <%= submit_tag 'Отправить', class: "px-4 py-2 bg-teal-500 text-white font-semibold rounded hover:bg-teal-600" %>
        <% end %>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-purple-600 mb-2">Форма без Turbo</h3>
        <%= form_with url: demo_submit_path, method: :post, data: { turbo: false }, class: "space-y-4" do %>
          <%= submit_tag 'Отправить', class: "px-4 py-2 bg-purple-500 text-white font-semibold rounded hover:bg-purple-600" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
